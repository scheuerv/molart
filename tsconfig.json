{
  "compilerOptions": {
    "composite": false,
    "target": "es2020",
    "jsx": "react",
    "outDir": "dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "Molstar/*": [
        "node_modules/molstar/lib/*"
      ]
    },
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}